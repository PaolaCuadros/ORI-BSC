<script type="text/javascript">
    $(function (){
       $("#addCaracteristica").submit(function (e){
           e.preventDefault();
           var caracteristica = $("caracteristica").val();
           var id_factor = $("id_factor").val();
           var id = $("id").val();
           $.ajax({
              url: $("#formadd").attr('action'),
              type: $("#formadd").attr('method'),
              data: {m1: caracteristica, m2: id_factor, m3: id},
              success: function (data) {
                  $("#resultado").val(data.resultad)
              }
           });
       }); 
    });
</script>
